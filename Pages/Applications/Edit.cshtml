@page
@model Apply_Jobs.Pages.Applications.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Application.Id" />
            <div class="form-group">
                <label asp-for="Application.AdvertisementId" class="control-label"></label>
                <select asp-for="Application.AdvertisementId" class="form-control" asp-items="ViewBag.AdvertisementId"></select>
                <span asp-validation-for="Application.AdvertisementId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.CandidateId" class="control-label"></label>
                <select asp-for="Application.CandidateId" class="form-control" asp-items="ViewBag.CandidateId"></select>
                <span asp-validation-for="Application.CandidateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
